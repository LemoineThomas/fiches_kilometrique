<%- include ('../layout.ejs') %>
<h2 class="mt-4"><%= title %></h2>

<% if (fiches != "") { %>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Date</th>
          </tr>
        </thead>
        <tbody>
            <%  fiches.forEach(element => { %>
                <tr>
                    <td><form method="post" action="afficherFiche"><input type="hidden" name="id" value="<%= element.id %>" /><%= element.date %> <input class="btn btn-primary" type="submit" value="Consulter" /></form></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% }else{ %>
    <p>Aucune fiche n'a été ajoutée.</p>
<% } %>

<a class="btn btn-info btn-block" href="/createFiche">Créer une fiche</a>

