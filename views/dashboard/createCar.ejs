<%- include ('../layout.ejs') %>
<h2 class="mt-4"><%= title %></h2>
<form action="/createCar" method="POST">
    <div class="form-group">
        <label for="formGroupExampleInput">Marque</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Ex: Citroën" name="marque">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput2">Modèle</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Ex: C3" name="modele">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput3">Puissance</label>
        <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Ex: 2CV" name="puissance">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput4">Année</label>
        <input type="text" class="form-control" id="formGroupExampleInput4" placeholder="Ex: 2003" name="annee">
    </div>
    <div class="form-group">
        <label for="formGroupExampleInput5">Immatriculation</label>
        <input type="text" class="form-control" id="formGroupExampleInput5" placeholder="Ex: 158-MQL-974" name="immatriculation">
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
</form>
<%- include ('../footer.ejs') %>