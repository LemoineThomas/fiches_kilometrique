<%- include ('../layout.ejs') %>
<h2 class="mt-4"><%= title %></h2>
<% if (vehicules != "") { %>
    <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Marque</th>
            <th scope="col">Modèle</th>
            <th scope="col">Puissance</th>
            <th scope="col">Année</th>
            <th scope="col">Immatriculation</th>
          </tr>
        </thead>
        <tbody>
            <%  vehicules.forEach(element => { %>
                <tr>
                    <td><%= element.marque %></td>
                    <td><%= element.modele %></td>
                    <td><%= element.puissance %></td>
                    <td><%= element.annee %></td>
                    <td><%= element.immatriculation %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <% }else{ %>
        <p>Aucun vehicule enregistré.</p>
    <% } %>
    <a class="btn btn-info btn-block" href="/createCar">Ajouter</a>
<%- include ('../footer.ejs') %>